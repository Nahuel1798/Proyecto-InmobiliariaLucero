@model Propietario

@{
    ViewData["Title"] = "Detalles del Propietario";
}

<h1 class="mb-4">Detalles del Propietario</h1>

<div class="card shadow-sm">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">DNI</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Dni)</dd>

            <dt class="col-sm-3">Apellido</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Apellido)</dd>

            <dt class="col-sm-3">Nombre</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

            <dt class="col-sm-3">Tel√©fono</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Telefono)</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Volver
    </a>
</div>
