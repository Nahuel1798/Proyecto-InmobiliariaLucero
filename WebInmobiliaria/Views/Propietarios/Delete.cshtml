@model Propietario

@{
    ViewData["Title"] = "Eliminar Propietario";
}

<h1 class="mb-4 text-danger">Eliminar Propietario</h1>

<h5 class="mb-3">¿Estás seguro de que querés borrar este propietario?</h5>

<div class="card shadow-sm">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">DNI</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Dni)</dd>

            <dt class="col-sm-3">Apellido</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Apellido)</dd>

            <dt class="col-sm-3">Nombre</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

            <dt class="col-sm-3">Teléfono</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Telefono)</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>
        </dl>
    </div>
    <div class="card-footer bg-light d-flex justify-content-between">
        <form asp-action="Delete" class="m-0">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Borrar
            </button>
        </form>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver
        </a>
    </div>
</div>
