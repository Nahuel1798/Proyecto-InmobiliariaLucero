@model Pago

@{
    ViewData["Title"] = "Confirmar Pago";
}

<h2>Confirmar Pago</h2>

<p>¿Está seguro que desea pagar el pago #@Model.Id por el período <strong>@Model.NumeroPeriodo</strong>?</p>

<form asp-action="PagarConfirmado" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-success">Confirmar Pago</button>
    <a asp-action="PorContrato" asp-route-id="@Model?.ContratoId" class="btn btn-secondary">Volver</a>
</form>
