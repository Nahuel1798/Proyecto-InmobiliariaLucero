@model IEnumerable<Inmueble>
@{
    ViewData["Title"] = "Inmuebles del propietario";
    var propietario = ViewBag.Propietario;
}

<h2>Inmuebles del propietario @propietario.Nombre @propietario.Apellido</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Dirección</th>
            <th>Uso</th>
            <th>Tipo</th>
            <th>Precio</th>
            <th>Disponible</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Direccion</td>
                <td>@item.Uso</td>
                <td>@item.TipoInmueble</td>
                <td>$@item.Precio</td>
                <td>@(item.Estado ? "Sí" : "No")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Ver</a>
                </td>
            </tr>
        }
    </tbody>
</table>
