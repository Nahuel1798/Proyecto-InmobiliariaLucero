@{
    ViewData["Title"] = "Contratos por Inmueble";
}

<h1 class="mb-4">Contratos por Inmueble</h1>

@if (!Model.Any())
{
    <div class="alert alert-info">No hay contratos registrados para este inmueble.</div>
}
else
{
    <table class="table table-striped">
        <thead class="table-dark">
            <tr>
                <th>Inquilino</th>
                <th>Desde</th>
                <th>Hasta</th>
                <th>Monto</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Inquilino?.NombreCompleto</td>
                <td>@item.FechaInicio.ToShortDateString()</td>
                <td>@item.FechaFin.ToShortDateString()</td>
                <td>@item.MontoMensual.ToString("C")</td>
            </tr>
        }
        </tbody>
    </table>
}
