@model Contrato

@{
    ViewData["Title"] = "Eliminar Contrato";
}

<h1 class="mb-4">Eliminar Contrato</h1>

<div class="alert alert-warning">
    <h4 class="alert-heading">¿Estás seguro de que deseas eliminar este contrato?</h4>
    <p>Esta acción no se puede deshacer.</p>
</div>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Detalles del Contrato</h5>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Fecha de Inicio</dt>
            <dd class="col-sm-9">@Model.FechaInicio.ToShortDateString()</dd>

            <dt class="col-sm-3">Fecha de Fin</dt>
            <dd class="col-sm-9">@Model.FechaFin.ToShortDateString()</dd>

            <dt class="col-sm-3">Monto Mensual</dt>
            <dd class="col-sm-9">$@Model.MontoMensual.ToString("N2")</dd>

            <dt class="col-sm-3">Inquilino</dt>
            <dd class="col-sm-9">@Model.Inquilino?.NombreCompleto</dd>

            <dt class="col-sm-3">Inmueble</dt>
            <dd class="col-sm-9">@Model.Inmueble?.Direccion</dd>

            <dt class="col-sm-3">Terminación Anticipada</dt>
            <dd class="col-sm-9">@Model.FechaTerminacionAnticipada?.ToShortDateString() ?? "No aplica"</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger me-2">Eliminar</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</div>
