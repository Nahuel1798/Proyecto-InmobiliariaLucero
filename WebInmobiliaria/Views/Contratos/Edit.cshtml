@model Contrato

@{
    ViewData["Title"] = "Editar Contrato";
}

<h1 class="mb-4">Editar Contrato</h1>

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Edit" method="post" class="row g-3 needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <input type="hidden" asp-for="Id" />

            <div class="col-md-6">
                <label asp-for="FechaInicio" class="form-label"></label>
                <input asp-for="FechaInicio" type="date" class="form-control" />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="FechaFin" class="form-label"></label>
                <input asp-for="FechaFin" type="date" class="form-control" />
                <span asp-validation-for="FechaFin" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="MontoMensual" class="form-label"></label>
                <input asp-for="MontoMensual" type="number" step="0.01" min="0" class="form-control" />
                <span asp-validation-for="MontoMensual" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="InquilinoId" class="form-label"></label>
                <select asp-for="InquilinoId" class="form-select" asp-items="ViewBag.InquilinoId">
                    <option value="">-- Seleccione Inquilino --</option>
                </select>
                <span asp-validation-for="InquilinoId" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="InmuebleId" class="form-label"></label>
                <select asp-for="InmuebleId" class="form-select" asp-items="ViewBag.InmuebleId">
                    <option value="">-- Seleccione Inmueble --</option>
                </select>
                <span asp-validation-for="InmuebleId" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="FechaTerminacionAnticipada" class="form-label"></label>
                <input asp-for="FechaTerminacionAnticipada" type="date" class="form-control" />
                <span asp-validation-for="FechaTerminacionAnticipada" class="text-danger"></span>
            </div>

            <div class="col-12 d-flex justify-content-end gap-2 mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
