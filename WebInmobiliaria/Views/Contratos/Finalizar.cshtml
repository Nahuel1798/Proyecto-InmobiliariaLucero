@model Contrato
@{
    ViewData["Title"] = "Finalizar Contrato";
}

<h1 class="mb-4 text-warning">Finalizar Contrato</h1>

<div class="alert alert-warning">
    Estás por finalizar este contrato de forma anticipada. Se aplicará una multa.
</div>

<form asp-action="Finalizar" method="post" class="row g-3">
    <input type="hidden" asp-for="Id" />

    <div class="col-md-6">
        <label asp-for="FechaTerminacionAnticipada" class="form-label">Fecha de Terminación</label>
        <input asp-for="FechaTerminacionAnticipada" type="date" class="form-control" />
        <span asp-validation-for="FechaTerminacionAnticipada" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="MontoMulta" class="form-label">Monto de Multa</label>
        <input asp-for="MontoMulta" class="form-control" />
        <span asp-validation-for="MontoMulta" class="text-danger"></span>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-danger">Finalizar Contrato</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

