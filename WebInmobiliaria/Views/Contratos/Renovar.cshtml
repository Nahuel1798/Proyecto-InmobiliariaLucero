@model Contrato

@{
    ViewData["Title"] = "Renovar Contrato";
}

<h1 class="mb-4">Renovar Contrato</h1>

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Renovar" method="post" class="row g-3 needs-validation" novalidate>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="InmuebleId" />
            <input type="hidden" asp-for="InquilinoId" />

            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="col-md-6">
                <label asp-for="FechaInicio" class="form-label">Nueva Fecha de Inicio</label>
                <input asp-for="FechaInicio" class="form-control" type="date" />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="FechaFin" class="form-label">Nueva Fecha de Fin</label>
                <input asp-for="FechaFin" class="form-control" type="date" />
                <span asp-validation-for="FechaFin" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="MontoMensual" class="form-label">Nuevo Monto Mensual</label>
                <input asp-for="MontoMensual" type="number" step="0.01" min="0" class="form-control" />
                <span asp-validation-for="MontoMensual" class="text-danger"></span>
            </div>

            <div class="col-12 d-flex gap-2 mt-4">
                <button type="submit" class="btn btn-primary">Renovar</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>

            <input type="hidden" id="fechaFinActual" value="@Model.FechaFin.ToString("yyyy-MM-dd")" />
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

