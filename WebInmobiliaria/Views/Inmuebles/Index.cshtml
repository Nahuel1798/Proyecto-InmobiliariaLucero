@model IEnumerable<Inmueble>

@{
    ViewData["Title"] = "Listado de Inmuebles";
}

<h1 class="mb-4">Inmuebles</h1>

<div class="mb-3">
    <a class="btn btn-primary" asp-action="Create">Agregar Inmueble</a>
    <a class="btn btn-secondary" asp-action="Index">Ver solo activos</a>
    <a class="btn btn-outline-secondary" asp-action="Todos">Ver Alquilados</a>
</div>

<table class="table table-striped">
    <thead class="table-dark">
        <tr>
            <th>Direcci√≥n</th>
            <th>Propietario</th>
            <th>Tipo</th>
            <th>Ambientes</th>
            <th>Precio</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
    <tr class="@(item.Estado ? "" : "table-danger")">
        <td>@item.Direccion</td>
        <td>@item.Propietario?.Nombre @item.Propietario?.Apellido</td>
        <td>@item.TipoInmueble?.Descripcion</td>
        <td>@item.Ambientes</td>
        <td>@item.Precio.ToString("C")</td>
        <td>
            <span class="badge @(item.Estado ? "bg-success" : "bg-danger")">
                @(item.Estado ? "Disponible" : "No disponible")
            </span>
        </td>
        <td>
            <a class="btn btn-sm btn-info" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
            <a class="btn btn-sm btn-secondary" asp-action="Details" asp-route-id="@item.Id">Detalles</a>
            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
        </td>
    </tr>
}
    </tbody>
</table>
