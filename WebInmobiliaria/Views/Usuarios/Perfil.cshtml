@model Usuario

<h2>Mi perfil</h2>

<form asp-action="Perfil" method="post" enctype="multipart/form-data">
    <div>
        <label>Email</label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div>
        <label>Nueva contrase√±a</label>
        <input name="nuevaClave" type="password" class="form-control" />
    </div>

    <div>
        <label>Avatar actual:</label><br />
        @if (!string.IsNullOrEmpty(Model.Avatar))
        {
            <img src="@Model.Avatar" width="100" />
            <a asp-action="QuitarAvatar">Quitar avatar</a>
        }
        else
        {
            <p>No hay avatar cargado</p>
        }
    </div>

    <div>
        <label>Nuevo avatar</label>
        <input type="file" name="avatarNuevo" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success mt-2">Actualizar perfil</button>
</form>
