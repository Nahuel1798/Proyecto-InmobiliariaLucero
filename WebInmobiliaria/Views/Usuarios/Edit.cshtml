@model Usuario

@{
    ViewData["Title"] = "Editar Usuario";
}

<div class="container mt-4" style="max-width: 600px;">
    <h2 class="mb-4">Editar Usuario</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="ejemplo@mail.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Clave" class="form-label">Contraseña</label>
                    <input asp-for="Clave" class="form-control" placeholder="Nueva contraseña (opcional)" />
                    <span asp-validation-for="Clave" class="text-danger"></span>
                </div>

                @if (!string.IsNullOrEmpty(Model.Avatar))
                {
                    <div class="mb-3">
                        <label class="form-label">Avatar actual:</label><br />
                        <img src="@Model.Avatar" alt="Avatar" width="100" class="rounded mb-2" />
                    </div>
                }

                <div class="mb-3">
                    <label for="avatarFile" class="form-label">Cambiar Avatar</label>
                    <input type="file" name="avatarFile" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="Rol" class="form-label">Rol</label>
                    <select asp-for="Rol" class="form-select">
                        <option value="Administrador">Administrador</option>
                        <option value="Empleado">Empleado</option>
                    </select>
                    <span asp-validation-for="Rol" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>
