@model Usuario

<h2>Editar usuario</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div>
        <label>Email</label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div>
        <label>Clave</label>
        <input asp-for="Clave" class="form-control" />
    </div>

    <div>
        <label>Rol</label>
        <select asp-for="Rol" class="form-control">
            <option>Administrador</option>
            <option>Empleado</option>
        </select>
    </div>

     <div class="form-group">
        <label for="avatarFile">Cambiar Avatar</label>
        <input type="file" name="avatarFile" class="form-control" />
    </div>

    @if (!string.IsNullOrEmpty(Model.Avatar))
    {
        <div class="form-group">
            <label>Avatar actual:</label><br />
            <img src="@Model.Avatar" alt="Avatar" width="100" />
        </div>
    }
    <div class="col-12">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
