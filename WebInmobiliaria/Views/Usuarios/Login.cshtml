@model Usuario

@{
    ViewData["Title"] = "Iniciar sesión";
}

<h2>Iniciar sesión</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form asp-action="Login" method="post">
    <div class="form-group">
        <label for="email">Email</label>
        <input name="email" type="email" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="clave">Contraseña</label>
        <input name="clave" type="password" class="form-control" required />
    </div>

    <div class="mt-3"></div>
        <a asp-action="Create" asp-controller="Usuarios" class="btn btn-primary mt-2">Crear nuevo usuario</a>
        <button type="submit" class="btn btn-primary mt-2">Ingresar</button>
    </div>
</form>